<div class="flex flex-col text-center">
  <%= image_tag "logo-square.png", class: "w-48 mx-auto ph:mb-6 tabp:mb-12" %>
</div>

<%= form_for resource,
             as: resource_name,
             url: registration_path(resource_name) do |f|
  %>

  <div class="form-floating mb-4">
    <%= f.email_field :email, autocomplete: "email",
                      placeholder: "email address",
                      class: "gt-fl-input form-control" %>

    <%= f.label :email, class: "text-violet-500 overflow-hidden" do %>
      <i class="h-4 w-5 text-violet-300 fas fa-envelope"></i>
      email address
    <% end %>
  </div>
  <div class="form-floating mb-4">
    <%= f.password_field :password, autocomplete: "new-password",
                         placeholder: "password",
                         class: "gt-fl-input form-control" %>

    <%= f.label :password, class: "text-violet-500 overflow-hidden" do %>
      <i class="h-4 w-5 text-violet-300 fas fa-lock"></i>
      password
    <% end %>
  </div>
  <div class="form-floating mb-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
                         placeholder: "confirm password",
                         class: "gt-fl-input form-control" %>

    <%= f.label :password, class: "text-violet-500 overflow-hidden" do %>
      <i class="h-4 w-5 text-violet-300 fas fa-check"></i>
      confirm password
    <% end %>
  </div>

  <div class="text-center pt-1 mb-6 dt:mb-12">
    <button class="gt-btn" type="submit" form="new_user"
      data-mdb-ripple="true"
      data-mdb-ripple-color="light"
      data-mdb-ripple-centered="true"
      data-mdb-ripple-duration="1000ms"
      >sign up
    </button>
  </div>
<% end %>
