<nav class="flex flex-wrap items-center justify-center gap-2 mb-6">
  <%- if controller_name != 'sessions' %>
    <a class="gt-ol-btn" href="<%= new_session_path(resource_name) %>"
      data-mdb-ripple="true"
      data-mdb-ripple-color="light"
      data-mdb-ripple-centered="true"
      data-mdb-ripple-duration="1000ms"
      >sign in
    </a>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <a class="gt-ol-btn" href="<%= new_registration_path(resource_name) %>"
      data-mdb-ripple="true"
      data-mdb-ripple-color="light"
      data-mdb-ripple-centered="true"
      data-mdb-ripple-duration="1000ms"
      >sign up
    </a>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <a class="gt-ol-btn" href="<%= new_password_path(resource_name) %>"
      data-mdb-ripple="true"
      data-mdb-ripple-color="light"
      data-mdb-ripple-centered="true"
      data-mdb-ripple-duration="1000ms"
      >forgot
    </a>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <a class="gt-ol-btn" href="<%= new_unlock_path(resource_name) %>"
      data-mdb-ripple="true"
      data-mdb-ripple-color="light"
      data-mdb-ripple-centered="true"
      data-mdb-ripple-duration="1000ms"
      >unlock
    </a>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <p class="text-center">
      <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "sign in with #{OmniAuth::Utils.camelize(provider).downcase}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
      <% end %>
    </p>
  <% end %>
</nav>
